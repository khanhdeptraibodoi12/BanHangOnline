@using Text.Models
@model List<Product>
@{
    Layout = null;
}

@foreach (var i in Model)
{
<div class="col-md-3 col-xs-6">
    <div class="product-item hover-trigger">
        <div class="product-img">
            <a href="@Url.Action("ShopDetail", "Product" ,new {Id = i.productId })">
                <img src="@Url.Content("" + i.image)" alt="">
            </a>
            <div class="product-label">
                <span class="sale">Sale @i.discount %</span>
            </div>
            <div class="hover-overlay">
                <div class="product-actions">
                    <a href="#" class="product-add-to-wishlist">
                        <i class="fa fa-heart"></i>
                    </a>
                </div>
                <div class="product-details valign">
                    <span class="category">
                        <a href="catalogue-grid.html">Women</a>
                    </span>
                    <h3 class="product-title">
                        <a href="@Url.Action("ShopDetail", "Product" ,new {Id = i.productId })">@i.productName</a>
                    </h3>
                    <span class="price">
                        <del>
                            <span>$@i.price</span>
                        </del>
                        <ins>
                            <span class="amount">$399.99</span>
                        </ins>
                    </span>
                    <div class="btn-quickview">
                        <a href="#" class="btn btn-md btn-color">
                            <span>Quickview</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
