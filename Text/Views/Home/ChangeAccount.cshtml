@model Text.Models.Member

@{
    ViewBag.Title = "ChangeAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ChangeAccount","Home"))
{
    @*@Html.ValidationSummary(true, "", new { @class = "validateLogin" })
    @Html.AntiForgeryToken()*@
    <div class="password-content" style="text-align: center">
        <h1>Change Password</h1>

        @*<form style="width: 420px; margin: 0 auto;">*@
    <div class="change-password">

        @Html.HiddenFor(model => model.dateOfJoin)
        @Html.HiddenFor(model => model.status)
        @Html.HiddenFor(model => model.roleId)
        @Html.HiddenFor(model => model.userName)
        @Html.HiddenFor(model => model.firstName)
        @Html.HiddenFor(model => model.lastName)
        @Html.HiddenFor(model => model.email)
        @Html.HiddenFor(model => model.identityNumber)
        @Html.HiddenFor(model => model.phone)
        @Html.HiddenFor(model => model.address)
        @Html.HiddenFor(model => model.birthday)
        @Html.HiddenFor(model => model.avatar)

        <input type="text" name="Current" placeholder="Current password" />
        @Html.ValidationSummary(true, "", new { @class = "validateLogin" })
        @Html.AntiForgeryToken()
        <input type="text" name="new" placeholder="new password" />
        <input type="text" name="confirm" placeholder="Confirm password" />
        <button type="submit" class="btn-submit">Change</button>

        @* </form>*@
    </div>
    </div>
}





<style>
    .change-password{
        width : 420px;
        text-align:center;
        margin : 0 auto ;
    }
</style>